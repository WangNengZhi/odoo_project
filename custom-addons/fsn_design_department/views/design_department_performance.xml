<odoo>
    <data>
		<!-- tree -->
		<record id="design_department_performance_tree" model="ir.ui.view">
			<field name="name">设计部绩效</field>
			<field name="model">design_department_performance</field>
			<field name="arch" type="xml">
				<tree create="false">
                    <field name="date" string="月份"/>
                    <field name="design_number" string="设计编号"/>
					<field name="style_number" string="款号"/>
                    <field name="designer" string="设计师"/>
                    <field name="sales_volume" string="销量"/>
				</tree>
			</field>
		</record>

		<!-- 动作 -->
		<record id="design_department_performance_action" model="ir.actions.act_window">
            <field name="name">设计部绩效</field>
            <field name="res_model">design_department_performance</field>
            <field name="view_mode">tree</field>
		</record>
    </data>
</odoo>