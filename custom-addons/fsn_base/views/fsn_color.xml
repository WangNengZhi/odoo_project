<odoo>
  	<data>

		<!-- tree -->
		<record model="ir.ui.view" id="fsn_color_tree">
			<field name="name">FSN_颜色</field>
			<field name="model">fsn_color</field>
			<field name="arch" type="xml">
				<!-- <tree editable="bottom" create="0" delete="0"> -->
				<tree editable="top">
					<field name="name" string="颜色名称"/>
					<field name="code" string="颜色代码"/>
				</tree>
			</field>
		</record>


		<!-- 动作 -->
		<record model="ir.actions.act_window" id="fsn_color_action">
			<field name="name">FSN_颜色</field>
			<field name="res_model">fsn_color</field>
			<field name="view_mode">tree</field>
		</record>



  	</data>
</odoo>