<odoo>
  	<data>

		<!-- tree -->
		<record model="ir.ui.view" id="fsn_size_tree">
			<field name="name">FSN_尺码</field>
			<field name="model">fsn_size</field>
			<field name="arch" type="xml">
				<tree editable="top">
					<field name="sequence" widget="handle"/>
					<field name="name" string="尺码名称"/>
				</tree>
			</field>
		</record>


		<!-- 动作 -->
		<record model="ir.actions.act_window" id="fsn_size_action">
			<field name="name">FSN_尺码</field>
			<field name="res_model">fsn_size</field>
			<field name="view_mode">tree</field>
		</record>


		
  	</data>
</odoo>