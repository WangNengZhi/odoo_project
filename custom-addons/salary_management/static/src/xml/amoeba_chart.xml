<?xml version="1.0" encoding="UTF-8"?>
<templates id="template02" xml:space="preserve">
    <!-- t-name qweb模板名称很重要 -->
    <t t-name="amoeba_chart">
        <!-- 增加滚动条 -->
        <div style="background-color: #FFFFFF; height:920px;overflow:scroll;overflow-x:hidden;">
            <div class="container wdc_margin">
                <div class="row">
                    <div class="col">
                        <!-- 各组 -->
                        <div id="amoeba_workshop" style="width: 530px;height:800px;"></div>
                    </div>
                    <div class="col">
                        <!-- 车间 -->
                        <div id="amoeba_total_workshop" style="width: 530px;height:800px;"></div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <!-- 后道 -->
                        <div id="amoeba_after_road" style="width: 530px;height:800px;"></div>
                    </div>
                    <div class="col">
                        <!-- 裁床 -->
                        <div id="amoeba_cutting_bed" style="width: 530px;height:800px;"></div>
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <div>
                            <input type="month" id="pie_chart_date" class="form-control"></input>
                        </div>
                    </div>
                    <div class="col">
                        <div>
                            <button type="button" id="pie_chart_refresh" class="btn btn-outline-primary">查询</button>
                        </div>
                    </div>
                </div>

            </div>
            <script type="text/javascript" src="/salary_management/static/src/js/_amoeba_chart.js"></script>

        </div>
    </t>

</templates>