<odoo>
    <data>

		<record model="ir.ui.view" id="ec_task_tree">
			<field name="name">电商任务</field>
			<field name="model">ec_task</field>
			<field name="arch" type="xml">
				<tree editable="bottom">
                    <header>
                        <!-- <button name="set_repair_proportion" type="object" string="test" class="btn-primary"/> -->
                    </header>
					<field name="task_name" string="任务名称"/>
				</tree>
			</field>
		</record>
        <!-- 动作 -->
        <record id="ec_task_action" model="ir.actions.act_window">
            <field name="name">电商任务</field>
            <field name="res_model">ec_task</field>
            <field name="view_mode">tree</field>
        </record>
    </data>
</odoo>